<!DOCTYPE html>
<html lang="en">
<%- include("partials/head.ejs") %> 
<body>
    <%- include("partials/header.ejs") %> 
    
    <div class="container">
        <h1>Perguntas</h1>
        <a class="btn btn-warning" href="/perguntar">PERGUNTAR</a>
        <hr>
        <br>

        <% perguntas.forEach(pergunta => { %> 

            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.pergunta %></h3> 
                </div>
                <div class="card-footer">
                    <button class="btn btn-dark"><a class="text-white text-decoration-none" href="/pergunta/<%= pergunta.id%>">Responder</a></button>
                </div>
            </div>    
                   
        <% }) %> 

    </div>

    <%- include("partials/script_bootstrap.ejs") %>  
</body>
</html>