<!DOCTYPE html>
<html lang="en">
<%- include("partials/head.ejs") %> 
<body>
    <%- include("partials/header.ejs") %> 
    
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3><%= pergunta.pergunta %></h3>
            </div>
            <div class="card-footer">
                <p><%= pergunta.resposta %></p>
            </div>
        </div>

        <form method="POST" action="/responder">
            <h3 class="mt-5">Responda</h3>
            <label class="mb-3">Resposta:</label>
            <textarea name="corpo" placeholder="Digite a sua resposta" class="form-control mb-3"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
            <button class="btn btn-success">Responder</button>
        </form>
        <h3 class="mt-5">Repostas</h3>
        <hr>
        <% respostas.forEach((resposta) => { %> 

            <div class="card mb-3">
                <div class="card-body">
                    <p><%= resposta.corpo%></p>
                </div>
            </div>
        <% }) %> 
    </div>

    <%- include("partials/script_bootstrap.ejs") %>  
</body>
</html>